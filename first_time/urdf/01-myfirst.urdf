<?xml version='1.0'?>
<robot name="fourwheelrobot">
<!--<link name="base_footprint" />

<joint name="base_footprint_joint" type="fixed">
  <parent link="base_footprint" />
  <child link="base_link" />
</joint>-->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0" />
      <geometry>
          <box size="1 0.5 0.2"/>
      </geometry>
      <material name="white">
<color rgba="1 1 1 1"/>
      </material>
    </visual>
<collision>
      <geometry>
        <box size="1 1.5 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5"/>
      <inertia ixx="0.2604" ixy="0.0" ixz="0.0" iyy="0.8854" iyz="0.0" izz="1.041"/>
    </inertial>
  </link>
  <link name="wheel1">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
      <material name="red">
      </material>
    </visual>
<collision>
      <geometry>
        <cylinder length="0.1" radius="0.3" />
      </geometry>
    </collision>
    <inertial>
      <mass value="3"/>
      <inertia ixx="0.0025" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0025"/>
    </inertial>

  </link>
  <joint name="joint_wheel1" type="continuous">
    <parent link="base_link"/>
    <child link="wheel1"/>
    <origin xyz="0.25 -0.30 0.2" rpy="0 0 0" /> 
    <axis xyz="0 1 0" rpy="0 0 0" />
<limit effort="10000" velocity="1000"/>
		<joint_properties damping="1.0" friction="1.0" />
  </joint>  
<gazebo reference="wheel1">
      		
      		<material></material>
    	</gazebo>
    	<transmission name="wheel1_rotate">
      		<type>transmission_interface/SimpleTransmission</type>
      		<actuator name="Wheel1Motor">
        		<mechanicalReduction>1</mechanicalReduction>
      		</actuator>
      		<joint name="joint_wheel1">
        		<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      		</joint>
    	</transmission>
  <link name="wheel3">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
      <material name="red"/>
<color rgba="1 0 0 0"/>
    </visual>
<collision>
      <geometry>
        <cylinder length="0.1" radius="0.3" />
      </geometry>
    </collision>
    <inertial>
      <mass value="3"/>
      <inertia ixx="0.0025" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0025"/>
    </inertial>
  </link>
  <joint name="joint_wheel3" type="continuous">
    <parent link="base_link"/>
    <child link="wheel3"/>
    <origin xyz="-0.25 -0.30 0.2" rpy="0 0 0" /> 
    <axis xyz="0 1 0" rpy="0 0 0" />
<limit effort="10000" velocity="1000"/>
		<joint_properties damping="1.0" friction="1.0" />
  </joint>  
<gazebo reference="wheel3">
      		
      		<material></material>
    	</gazebo>
    	<transmission name="wheel3_rotate">
      		<type>transmission_interface/SimpleTransmission</type>
      		<actuator name="Wheel3Motor">
        		<mechanicalReduction>1</mechanicalReduction>
      		</actuator>
      		<joint name="joint_wheel3">
        		<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      		</joint>
    	</transmission>
  <link name="wheel2">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
      <material name="red"/>
<color rgba="1 0 0 0"/>
    </visual>
<collision>
      <geometry>
        <cylinder length="0.1" radius="0.3" />
      </geometry>
    </collision>
    <inertial>
      <mass value="3"/>
      <inertia ixx="0.0025" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0025"/>
    </inertial>
  </link>
  <joint name="joint_wheel2" type="continuous">
    <parent link="base_link"/>
    <child link="wheel2"/>
    <origin xyz="0.25 0.30 0.2" rpy="0 0 0" /> 
    <axis xyz="0 1 0" rpy="0 0 0" />
<limit effort="10000" velocity="1000"/>
		<joint_properties damping="1.0" friction="1.0" />
  </joint>
<gazebo reference="wheel2">
      		<material></material>
    	</gazebo>
    	<transmission name="wheel2_rotate">
      		<type>transmission_interface/SimpleTransmission</type>
      		<actuator name="Wheel2Motor">
        		<mechanicalReduction>1</mechanicalReduction>
      		</actuator>
      		<joint name="joint_wheel2">
        		<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      		</joint>
    	</transmission>
  <link name="wheel4">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.1" radius="0.2" />
      </geometry>
      <material name="red"/>
<color rgba="1 0 0 0"/>
    </visual>
<collision>
      <geometry>
        <cylinder length="0.1" radius="0.3" />
      </geometry>
    </collision>
    <inertial>
      <mass value="3"/>
      <inertia ixx="0.0025" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0025"/>
    </inertial>
  </link>
  <joint name="joint_wheel4" type="continuous">
    <parent link="base_link"/>
    <child link="wheel4"/>
    <origin xyz="-0.25 0.30 0.2" rpy="0 0 0" /> 
    <axis xyz="0 1 0" rpy="0 0 0" />
<limit effort="10000" velocity="1000"/>
		<joint_properties damping="1.0" friction="1.0" />

  </joint>
<gazebo reference="wheel4">
      		
      		<material></material>
    	</gazebo>

<transmission name="wheel4_rotate">
      		<type>transmission_interface/SimpleTransmission</type>
      		<actuator name="Wheel4Motor">
        		<mechanicalReduction>1</mechanicalReduction>
      		</actuator>
      		<joint name="joint_wheel4">
        		<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      		</joint>
    	</transmission>
	
<gazebo>
     <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <leftJoint>joint_wheel2</leftJoint>
      <rightJoint>joint_wheel1</rightJoint>
      <leftJoint>joint_wheel4</leftJoint>
      <rightJoint>joint_wheel3</rightJoint>
      <wheelSeparation>0.6</wheelSeparation>
      <wheelDiameter>0.4</wheelDiameter>
      <torque>0.1</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link</robotBaseFrame>
     </plugin>
    </gazebo>
</robot>
